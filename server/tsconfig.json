{
  "compilerOptions": {
    "target": "es2024",             
    "module": "esnext",                 
    "moduleResolution": "node",                
    "sourceMap": true,                               
    "outDir": "./dist-ts",
    "allowJs": true,
    "noEmit": true,                     
    "esModuleInterop": true,    
    "strict": true,                                  
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,  
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules"]
}
