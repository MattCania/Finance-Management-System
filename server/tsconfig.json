{
  "compilerOptions": {
    "target": "es2024",             
    "module": "esnext",                 
    "moduleResolution": "node",                
    "sourceMap": true,                               
    "outDir": "./dist-ts",
    "paths": {
      "@/*": ["./src"]
    },
    "allowJs": true,
    "noEmit": true,                     
    "esModuleInterop": true,    
    "strict": true,                                  
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,  
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
